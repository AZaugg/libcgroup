group ca1 {
	perm {
		task {
			uid = root;
			gid = root;
		}
		admin {
			uid = balbir;
			gid = balbir;
		}
	}

	cpu {
		cpu.shares = 500;
	}

	memory {
		memory.limit_in_bytes = 200M;
	}

}

group default {
	perm {
		task {
			uid = root;
			gid = root;
		}
		admin {
			uid = root;
			gid = root;
		}
	}

	cpu {
		cpu.shares = 500;
	}

	memory {
		memory.limit_in_bytes = 200M;
	}

	cpuacct {}
}

mount {
	cpu = /cgroup/cpu;
	memory = /cgroup/mem;
}

mount {
	cpuacct = /cgroup/cpu;
}
